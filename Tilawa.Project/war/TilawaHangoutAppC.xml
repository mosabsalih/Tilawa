	<ModulePrefs title="Tilawa App">
		<Require feature="views" />
		<Require feature="rpc" />
	</ModulePrefs>
	<Content type="html">
		<![CDATA[

		<!DOCTYPE html>
		<html lang="ar" dir="rtl">

		<head>

		<!-- Includes for responsive UI -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<script src="//tilawaapp.appspot.com/js/jquery.js"></script>

		<style type="text/css">
		body {

		padding-top: 40px;
		padding-bottom: 40px;
		background-color: #f5f5f5;
		}

		.customfont {
		font-family: "Lucida Sans Unicode";
		}

		</style>

		</head>

		<body>

		<div align="center">
		<button class="btn btn-large btn-primary" type="button" id="getData">
		Get Data
		</button>
		<p id="showData"></p>
		<br />
		</div>


		<script>
		$('document').ready(function() {

		$("#getData").click(function() {

		var serverData = getVerses({
		suratId : 1,
		verseId : 1,
		verseCount : 2
		});

		$("#showData").after(serverData);

		});

		});
		</script>
		</body>

		</html>

		]]>
	</Content>
</Module>

